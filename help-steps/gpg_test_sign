#!/bin/bash

## Copyright (C) 2012 - 2021 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

dist_build_one_parsed="1"
VMNAME="internalrun"

source pre
source colors
source variables

main() {
   echo "test" > "$binary_build_folder_dist/test_sign_file"
   chown "$user_name:$user_name" "$binary_build_folder_dist/test_sign_file"
   sudo $SUDO_OPTS $gpg_bin --detach-sign --armor --yes --output "$binary_build_folder_dist/test_sign_file.asc" "$binary_build_folder_dist/test_sign_file"
   sudo $SUDO_OPTS $gpg_bin --verify "$binary_build_folder_dist/test_sign_file.asc" "$binary_build_folder_dist/test_sign_file"
   rm "$binary_build_folder_dist/test_sign_file"
   rm "$binary_build_folder_dist/test_sign_file.asc"
}

main "$@"
