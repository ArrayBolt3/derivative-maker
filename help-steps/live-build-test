#!/bin/bash

set -x
set -e

mkdir ~/live-build-test
cd ~/live-build-test

lb config \
    --chroot-filesystem ext4 \
    --source false \
    --zsync false

echo "task-lxde-desktop firefox-esr" | tee ./config/package-lists/my.list.chroot >/dev/null

lb config --dump
lb config --validate

lb build

true "END"
