#!/bin/bash

## Copyright (C) 2012 - 2021 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

dist_build_one_parsed="1"
ROOT_CHECK="0"
VMNAME="internalrun"

source pre
source colors
source variables

main() {
   shopt -s nullglob
   shopt -s dotglob

   ## Use -x to delete files listed in .gitignore.
   ## Make sure packages/uwt/libindp.so is deleted.
   git clean -d --force --force -x

   for item in "$source_code_folder_dist/packages/"*; do
      if [ ! -d "$item" ]; then
         true "INFO: Not a folder: $item"
         continue
      fi
      cd "$item"
      ## Use git rather than "make deb-cleanup" for better security.
      git clean -d --force --force -x
   done

}

main "$@"
