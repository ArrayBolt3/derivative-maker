#!/bin/bash

## Copyright (C) 2012 - 2022 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source "$MYDIR/pre"
source "$MYDIR/colors"
source "$MYDIR/variables"

error_handler_unchroot-raw() {
   : echo "
${red}${bold}BASH_COMMAND${reset}: $BASH_COMMAND
${red}${bold}ERROR $BASH_SOURCE: | caller: $(caller)${reset}
"
   exit 1
}

main() {
   trap "error_handler_unchroot-raw" ERR INT TERM

   sync || true

   if [ "$dist_build_install_to_root" = "1" ]; then
      true
   else
      $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/dev/pts || true
      $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/dev || true
      $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/proc || true
      $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/sys || true

      ## {{{
      $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER/usr/bin/udevadm" || true
      $SUDO_TO_ROOT rm --force "$CHROOT_FOLDER/usr/bin/udevadm" || true
      ## }}}
   fi

   $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER/$DEB_INSTALL_FOLDER" || true

   $SUDO_TO_ROOT rmdir --ignore-fail-on-non-empty "$CHROOT_FOLDER/$DEB_INSTALL_FOLDER" || true

   ## Also possibly unmount .backup file for bare metal builds.
   $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/etc/resolv.conf || true
   $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/etc/hosts || true
   $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/etc/hostname || true
   $SUDO_TO_ROOT umount --verbose "$CHROOT_FOLDER"/etc/network/interfaces || true

   if [ "$dist_build_install_to_root" = "1" ]; then
      ## $CHROOT_FOLDER would be /, not wise to kill all
      true
   else
      ## kill dbus-launch when building Non-Qubes-Whonix inside a Qubes Debian template
      ## The leading '/' is important to prevent umount --verboseing $CHROOT_FOLDER itself.
      $SUDO_TO_ROOT "$MYDIR/umount_kill.sh" "$CHROOT_FOLDER/"
   fi

   sync || true
}

main "$@"
