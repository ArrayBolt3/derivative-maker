## This script is supposed to be run:
## - For official binary builds by a builder (developer).
## - For debug builds: (dm-virtualbox-build-debug)
## - By the CI.

set -x
set -e
true "$0: START"

true "$0: checklist..."
df -h
sleep 2

## Debugging.
ls -la
pwd

cd derivative-maker

true "$0: --------------------"
## cross-building is too slow. Hits GitHub 6 hours maximum time.
## Can be overwritten in './help-steps/dm-build-official-one'.
#architecture=arm64 ./help-steps/dm-build-official-one "$@"
true "$0: --------------------"
architecture=amd64 ./help-steps/dm-build-official-one "$@"
true "$0: --------------------"

true "$0: END"
