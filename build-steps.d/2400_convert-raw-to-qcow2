#!/bin/bash

## Copyright (C) 2012 - 2022 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

set -x
set -e

true "INFO: Currently running script: $BASH_SOURCE $@"

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$MYDIR"
cd ..
cd help-steps

source pre
source colors
source variables

convert_raw_to_qcow2() {
   if [ ! "$dist_build_qcow2" = "true" ]; then
      true "${green}INFO: Skipping $BASH_SOURCE, because dist_build_qcow2 is not set to true.${reset}"
      return 0
   fi

   mkdir --parents "${dist_binary_build_folder}"

   ## Debugging.
   qemu-img \
      info \
         "$binary_image_raw"

   ## Create qcow2 image form raw image.
   ## VMSIZE defaults to 100G as per help-steps/variables.
   qemu-img \
      convert \
         -p \
         -O qcow2 \
         -o cluster_size=2M \
         -o preallocation=metadata \
         "$binary_image_raw" \
         "$binary_image_qcow2"

   ## Debugging.
   qemu-img \
      info \
         "$binary_image_qcow2"

   true
}

main() {
   root_check
   if [ "$dist_build_qcow2" = "true" ]; then
      convert_raw_to_qcow2
   else
      true "${green}INFO: Skipping $BASH_SOURCE, because dist_build_qcow2 is not set to 'true'.${reset}"
   fi
}

main "$@"
